con_name=mc-devel

if [ $1 = "b" ]
    then
        shift;
        docker-compose build $@
elif [ $1 = "a" ]
    then
        docker attach $con_name
elif [ $1 = "u" ]
    then
        shift;
        docker-compose up -d $@
elif [ $1 = "r" ]
    then
        shift;
        docker kill $con_name >> /dev/null 2>&1
        docker rm $con_name >> /dev/null 2>&1
        docker-compose run --name $con_name $@ /bin/zsh
else
    docker-compose $@
fi
